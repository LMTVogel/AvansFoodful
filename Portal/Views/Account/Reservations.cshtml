@{
    ViewData["Title"] = "Reserveringen";
}

@model IEnumerable<Core.Domain.Package>

<div class="container crates">
    <h1 style="margin-top: 20px;">@ViewData["Title"]</h1>
    <div class="row">
        @if (Model != null)
        {
            @foreach (var package in Model)
            {
                <div class="col-3">
                    <div class="crate row">
                        <div class="col-10">
                            <h4 class="crate-title">@package.Name</h4>
                        </div>
                        <div class="col-2">
                            <p class="crate-price">@package.Price,-</p>
                        </div>
                        <div class="col-10">
                            @if (package.IsMealHot)
                            {
                                <p>Maaltijd is warm</p>
                            }
                            else
                            {
                                <p>Maaltijd is NIET warm</p>
                            }
                            <p>Pakket type: @package.IsMealHot</p>
                            <p>Stad: @package.Canteen.City</p>
                            <p>Kantine: @package.Canteen.CanteenName</p>
                            <p>Ophalen tot: @package.MaxPickupTime</p>
                        </div>
                        @if (package.ContainsAlcohol)
                        {
                            <div class="col-2">
                                <p>+18</p>
                            </div>
                        }
                    </div>
                </div>
            }
        }
        else
        {
            <p>Je hebt nog geen reserveringen gemaakt.</p>
        }
    </div>
</div>